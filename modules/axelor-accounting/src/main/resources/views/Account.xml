<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="accounting-account-grid" title="Account Info"
          model="com.axelor.apps.accounting.db.Account">
        <field name="name" title="Name"/>
        <field name="code" title="Code"/>
        <field name="fullName" title="Full Name"/>
    </grid>


    <form name="accounting-account-form"
          title="Account Info"
          model="com.axelor.apps.accounting.db.Account">

        <panel name="accountPanel" title="Account Details" >
            <field name="name" title="Name"  />
            <field name="code" title="Code" />
        </panel>

    </form>

</object-views>