<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="contact-grid"
          title="Contacts"
          model="com.axelor.contact.db.Contact">
        <field name="fullName" />
        <field name="email" />
        <field name="phone" />
        <field name="dateOfBirth" />
        <field name="fullAddress" />
    </grid>

    <form name="contact-form" title="Contact" model="com.axelor.contact.db.Contact">
        <panel name="imagePanel" title="Image">
            <field name="picture" showTitle="false" colSpan="2" widget="Image"/>
            <field name="fullName" readonly="false" colSpan="10">
                <editor>
                    <field name="title" colSpan="12" canNew="true"/>
                    <field name="firstName" colSpan="6"/>
                    <field name="lastName" colSpan="6"/>
                </editor>
            </field>
        </panel>
        <panel name="personalInformationPanel" title="Personal Information">
            <field name="dateOfBirth"/>
            <field name="email" placeholder="whatever@example.com" widget="email">
                <viewer><![CDATA[

                      <a href="mailto:{{record.email}}">{{record.email}}</a>

              ]]></viewer>
            </field>
            <field name="phone" widget="phone">
                <viewer><![CDATA[

                      <a href="tel:{{record.phone}}">{{record.phone}}</a>

              ]]></viewer>
            </field>
        </panel>
        <panel name="postalAddressesPanel" title="Postal addresses" colSpan="12">
            <field name="address" title="Postal Address">
                <viewer><![CDATA[
					<span >{{record.addresses.fullAddress}}</span>
              ]]></viewer>
                <editor x-show-titles="false">
                    <panel colSpan="12" css="field-append">
                        <field name="addresses" colSpan="12" canNew="true" required="true" form-view="address-form" grid-view="address-grid"/>
                    </panel>
                </editor>
            </field>
            <spacer/>

        </panel>
        <panel name="sidePanel" sidebar="true">
            <field name="createdOn"/>
            <field name="createdBy"/>
            <field name="updatedOn"/>
            <field name="updatedBy"/>
        </panel>
    </form>



    <form name="contact-form-addresses-popup" title="Address"
          model="com.axelor.contact.db.Address"
          onNew="default-address-record" width="large">
        <panel name="mainPanel" title="Address details" colSpan="12">
            <field name="street"/>
            <field name="city" />
            <field name="zip"/>
            <field name="country" form-view="country-form" grid-view="country-grid" canEdit="false"
                   canNew="true" />

        </panel>
    </form>

</object-views>