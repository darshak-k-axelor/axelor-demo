<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">

    <grid name="address-grid"
          title="Addresses"
          model="com.axelor.contact.db.Address">
        <field name="street" />
        <field name="zip" />
        <field name="city" />
    </grid>

    <form name="address-form"
          title="Address"
          model="com.axelor.contact.db.Address">
        <panel name="overviewPanel" title="Overview">

            <field name="street" />
            <field name="zip" />
            <field name="city" />
            <field name="country" />

        </panel>
        <panel-related name="addressesPanel"
                       field="addresses"
                       form-view="address-form-popup">
            <field name="name"/>
            <field name="code"/>
        </panel-related>
        <panel name="sidePanel" sidebar="true">
            <field name="createdOn"/>
            <field name="createdBy"/>
            <field name="updatedOn"/>
            <field name="updatedBy"/>
        </panel>
    </form>

    <form name="address-form-popup"
          title="Country"
          model="com.axelor.contact.db.Country">
        <panel title="Overview">
            <field name="name"/>
            <field name="code"/>
        </panel>
    </form>

</object-views>